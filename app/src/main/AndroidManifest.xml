<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Permiso necesario para reproducir streams e imÃ¡genes -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:label="TVAppVLC"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/Theme.TVAppVLC"
        android:usesCleartextTraffic="true">

        <!-- Activity principal -->
        <activity
            android:name="com.bc.tvappvlc.ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity para el reproductor -->
        <activity
            android:name="com.bc.tvappvlc.PlayerActivity"
            android:exported="false" />

    </application>
</manifest>
