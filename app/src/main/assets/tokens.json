{
  "colors": {
    "background": "#0E0F12",
    "surface": "#14161A",
    "primary": "#00E0FF",
    "onPrimary": "#0B0C0F",
    "textPrimary": "#FFFFFF",
    "textSecondary": "#B9C0CC",
    "cardBorder": "#1E2127",
    "liveBadgeBg": "#FF1744",
    "liveBadgeText": "#FFFFFF",
    "appBarBg": "#0E0F12",
    "appBarTitleStart": "#00E0FF",
    "appBarTitleEnd": "#7C4DFF",
    "statusBar": "#0B0C0F",
    "navBar": "#0B0C0F",
    "chipBg": "#1A1D22",
    "chipText": "#C6CCD8",
    "bannerOverlay": "#00000080"
  },
  "typography": {
    "fontFamily": "tu_fuente", 
    "h1Sp": 22, "h2Sp": 18, "bodySp": 14, "captionSp": 12
  },
  "shape": { "cardRadiusDp": 16, "bannerRadiusDp": 16, "chipRadiusDp": 12 },
  "layout": {
    "headerHeightDp": 56,
    "grid": { "gutterDp": 8, "paddingDp": 8, "colsPortrait": 2, "colsLandscape": 3, "colsTablet": 4 },
    "card": { "aspectRatio": "16:9", "titleMaxLines": 1 },
    "banner": { "aspectRatio": "16:9", "autoSlide": true, "slideIntervalMs": 6000 }
  },
  "badgeLive": {
    "text": "EN VIVO", "position": "topLeft", "padHdp": 6, "padVdp": 2, "radiusDp": 8
  },
  "animations": {
    "appBarTitleGradient": { "durationMs": 4000, "easing": "linear", "loop": "infinite" },
    "cardHoverLift": { "elevationFrom": 2, "elevationTo": 6, "scaleFrom": 1.0, "scaleTo": 1.03, "durationMs": 160, "easing": "standard" },
    "cardPress": { "scaleFrom": 1.0, "scaleTo": 0.98, "durationMs": 80, "easing": "fastOut" },
    "liveBadgePulse": { "alphaFrom": 0.9, "alphaTo": 1.0, "durationMs": 900, "easing": "easeInOut", "loop": "yoyo" },
    "chipsUnderlineSlide": { "durationMs": 200, "easing": "standard" },
    "bannerParallax": { "shiftPx": 24, "durationMs": 6000, "easing": "linear", "loop": "infinite" },
    "skeletonShimmer": { "durationMs": 1200, "angleDeg": 20, "intensity": 0.35 },
    "listEnter": { "staggerMs": 40, "offsetY": 10, "alphaFrom": 0.0, "durationMs": 220, "easing": "standard" }
  }
}
